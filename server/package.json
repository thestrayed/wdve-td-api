{
    "name": "wdve-td-api",
    "version": "1.0.0",
    "main": "dist/server.js",
    "license": "MIT",
    "scripts": {
        "db:migrate": "sequelize db:migrate",
        "dev": "yarn db:migrate && ts-node-dev --respawn --transpileOnly server.ts",
        "lint": "tslint --project tsconfig.json",
        "test": "jest --verbose --coverage"
    },
    "dependencies": {
        "@hapi/joi": "15.0.0",
        "config": "3.0.1",
        "express": "4.16.4",
        "http-status": "1.3.2",
        "js-yaml": "3.12.2",
        "lodash": "4.17.11",
        "module-alias": "2.2.0",
        "pg": "7.10.0",
        "reflect-metadata": "0.1.13",
        "sequelize": "5.7.0"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/config": "^0.0.34",
        "@types/express": "^4.16.1",
        "@types/faker": "^4.1.5",
        "@types/hapi__joi": "^15.0.1",
        "@types/http-status": "^0.2.30",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.123",
        "@types/node": "^11.13.5",
        "@types/validator": "^10.11.0",
        "faker": "^4.1.0",
        "jest": "^24.7.1",
        "node-mocks-http": "^1.7.3",
        "sequelize-cli": "^5.4.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.0.3",
        "ts-node-dev": "^1.0.0-pre.32",
        "tslint": "^5.13.1",
        "typescript": "^3.3.3333"
    },
    "_moduleAliases": {
        "@controllers/*": "controllers/*.js",
        "@config": "config/config.json",
        "@errors": "errors/index.js",
        "@middlewares": "middlewares/index.js",
        "@models": "model/index.js",
        "@services": "services/index.js",
        "@typings/*": "typings/*.js"
    },
    "jest": {
        "collectCoverageFrom": [
            "controller/*.{js,ts}",
            "erros/*.{js,ts}",
            "lib/*.{js,ts}",
            "services/*.{js,ts}"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "@controllers/(.*)": "<rootDir>/controllers/$1",
            "@config": "<rootDir>/config/config.json",
            "@errors": "<rootDir>/errors",
            "@middlewares": "<rootDir>/middlewares",
            "@models": "<rootDir>/models",
            "@services": "<rootDir>/services",
            "@typings/(.*)": "<rootDir>/typings/$1"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    }
}
